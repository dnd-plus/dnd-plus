{
  "name": "dnd",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/client",
    "packages/common",
    "packages/server"
  ],
  "scripts": {
    "start:client": "cd ./packages/client && yarn start",
    "build:client": "cd ./packages/client && yarn build",
    "dev:server": "cd ./packages/server && yarn dev"
  },
  "license": "MIT",
  "devDependencies": {
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && cd ./packages/client && tsc && cd ../server && tsc"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,md}": "prettier --write"
  }
}
